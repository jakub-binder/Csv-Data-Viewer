{
  "name": "csv-data-viewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run electron:compile && concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder --win portable"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "papaparse": "^5.5.3",
    "chart.js": "^4.4.9",
    "react-chartjs-2": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.6.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.2",
    "vite": "^5.4.14",
    "vitest": "^3.0.8",
    "wait-on": "^8.0.3"
  },
  "main": "electron-dist/main.js",
  "build": {
    "appId": "com.csvdataviewer.app",
    "productName": "CSV Data Viewer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron-dist/**",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
